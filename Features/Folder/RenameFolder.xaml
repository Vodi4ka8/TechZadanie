<Window x:Class="TechZadanie.Features.Folder.RenameFolder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TechZadanie.Features.Folder"
        mc:Ignorable="d"
        Title="RenameFolder" Height="450" Width="800" Background="AliceBlue">
    <Grid Margin="0,0,10,6">
        <TextBox x:Name="FolderNameBox" HorizontalAlignment="Left" Margin="119,0,0,0" TextWrapping="Wrap" Text="Имя Папки" VerticalAlignment="Center" Width="266" Height="37" />
        <Button Content="Переименовать" HorizontalAlignment="Left" Margin="438,0,0,0" VerticalAlignment="Center" Height="33" Width="115" Click="Button_Click"/>
        <TextBox x:Name="NewFolderNameBox" HorizontalAlignment="Left" Margin="119,265,0,0" TextWrapping="Wrap" Text="Новое Имя Папки" VerticalAlignment="Top" Width="266" Height="37" />

    </Grid>
</Window>
